{
  "name": "symon",
  "version": "0.0.1",
  "description": "Synthetic Monitoring",
  "main": "index.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.14.0"
  },
  "scripts": {
    "start": "concurrently --kill-others -p name -n 'server,client' -c 'blue,green' 'npm run server' 'npm run client'",
    "client": "webpack serve --progress --profile --watch --content-base src/ ",
    "server": "npm run server:build && node build/server/index.js",
    "server:build": "tsc",
    "test": "npm run check-format",
    "check-format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "format-code": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "lint": "eslint src --ext js,jsx,ts,tsx",
    "lint-fix": "eslint src --ext js,jsx,ts,tsx --fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperjumptech/symon.git"
  },
  "bugs": {
    "url": "https://github.com/hyperjumptech/symon/issues"
  },
  "homepage": "https://github.com/hyperjumptech/symon#readme",
  "dependencies": {
    "express": "~4.17.1",
    "react": "~17.0.1",
    "react-dom": "~17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-essentials": "^6.1.14",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/react": "^6.1.14",
    "@types/express": "^4.17.11",
    "@types/react": "~17.0.0",
    "@types/react-dom": "~17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "concurrently": "~5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.0.0-beta.5",
    "prettier": "~2.2.1",
    "ts-loader": "~8.0.14",
    "typescript": "~4.1.3",
    "webpack": "~5.15.0",
    "webpack-cli": "~4.3.1",
    "webpack-dev-server": "~3.11.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
