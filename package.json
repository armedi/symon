{
  "name": "symon",
  "version": "0.0.1",
  "description": "Synthetic Monitoring",
  "main": "index.js",
  "scripts": {
    "start": "npm run client",
    "client": "webpack serve --progress --profile --watch --content-base src/ ",
    "server": "node src/server/index.js",
    "test": "npm run check-format",
    "check-format": "prettier --check \"**/*.js\"",
    "format-code": "prettier --write \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperjumptech/symon.git"
  },
  "bugs": {
    "url": "https://github.com/hyperjumptech/symon/issues"
  },
  "homepage": "https://github.com/hyperjumptech/symon#readme",
  "dependencies": {
    "express": "~4.17.1",
    "react": "~17.0.1",
    "react-dom": "~17.0.1"
  },
  "devDependencies": {
    "@types/react": "~17.0.0",
    "@types/react-dom": "~17.0.0",
    "html-webpack-plugin": "~4.5.1",
    "prettier": "~2.2.1",
    "ts-loader": "~8.0.14",
    "typescript": "~4.1.3",
    "webpack": "~5.15.0",
    "webpack-cli": "~4.3.1",
    "webpack-dev-server": "~3.11.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
